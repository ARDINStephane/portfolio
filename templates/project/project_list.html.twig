{% extends 'base.html.twig' %}

{% block title %}mini projet 1{% endblock %}

{% block body %}

    <div class="jumbotron text-center">
        <h1 class="display-4">C'Ã©tait super tous ces mini projets !!</h1>
    </div>
    <div class="container">
        <div class="row">
            {% for project in  projectList %}
            <div class="col-md-4 mt-4">
                <div class="card profile-card-5">
                    <div class="card-img-block">
                        <img class="card-img-top" src="{{ project.image }}" alt="Project img"/>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ project.title }}
                        </h5>
                        <p class="card-text">
                            {{ project.introduction }}
                        </p>
                        <div class="projects-links d-flex justify-content-between">
                            <a href="#" target="_blanc" class="btn btn-outline-dark">
                                <i class="fab fagithub"></i>
                                {{ project.github}}
                            </a>
                            <a href="{{ path("project.show", {
                                'id' : project.id
                            }) }}" class="btn btn-outline-info">
                                <i class="fab intocircle"></i>
                                Ensavoir plus
                            </a>

                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
