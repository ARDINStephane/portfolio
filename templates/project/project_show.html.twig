{% extends 'base.html.twig' %}

{% block title %}{{ 'project.miniPoject' | trans }}{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1 class="display-4">{{ 'project.cool' | trans }}</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 mt-4">
                <div class="card profile-card-5">
                    <div class="card-img-block">
                        <img class="card-img-top" src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="project-img" style="width: 100%; height:auto;">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ project.title }}
                        </h5>
                        <p class="card-text">
                            {{ project.introduction }}
                        </p>
                        <div class="projects-links d-flex justify-content-between">
                            <a href="{{ project.github}}" target="_blanc" class="btn btn-outline-info">
                                <i class="fab fa-github"></i>
                                {{ 'project.github' | trans }}
                            </a>
                            <a href="{{ project.github }}/archive/master.zip" class="btn btn-outline-info">
                                <i class="fas fa-download"></i>
                                {{ 'project.download' | trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
