                            <a href="{{ project.github}}" target="_blanc" class="btn btn-outline-dark">
                                <i class="fab fagithub"></i>
                                Github
                            </a>
                            <a href="{{ project.github }}/archive/master.zip" class="btn btn-outline-info">
