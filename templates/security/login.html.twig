{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login' | trans }}{% endblock %}
{% block body %}
    {% if errors %}
        <div class="alert alert-danger">
            {{ errors.messageKey | trans(errors.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="container-fluid mt-5 col-md-4">
        <div>
            <h1>{{ 'security.connection' | trans }}</h1>
        </div>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group my-4">
                <label for="username">{{ 'security.form.userName' | trans }}</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ lastUsername }}">
            </div>
            <div class="form-group">
                <label for="password">{{ 'security.form.password' | trans }}</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <button class="btn btn-primary my-3"><i class="fas fa-user-lock"></i> {{ 'security.login' | trans }}</button>
        </form>
    </div>
{% endblock %}
