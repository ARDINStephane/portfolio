{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Courgette|Dancing+Script|Fruktur|Pacifico&display=swap" rel="stylesheet">
{% endblock %}

{% block title %}{{ 'home.title' | trans }}{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid text-center custom-title-sun my-0">
        <div class="row">
            <div class="col">
                <h1>{{ 'home.sun' | trans }} :</h1>
            </div>
        </div>
        <div class="row my-3">
            <div class="col">
                <button type="button" class="btn btn-danger" id="renverse">{{ 'home.click' | trans }}</button>
                <script>
                    document.getElementById("renverse").onclick = function(){
                        document.body.style['transition'] = 'transform 3s';
                        document.body.style['transform'] = 'rotate(180deg)'
                    }
                </script>
            </div>
        </div>
    </div>
    <body>
        {% include 'includes/carousel.html.twig' %}

    </body>

{% endblock %}
