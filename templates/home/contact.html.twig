{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.contact' | trans }}{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="font-weight-bold">{{ 'contact.info' | trans }}</h1>
                </div>
            </div>
            <div class="row font-weight-bold my-5">
                <div class="col">
                    <img class="" src="/images/utils/tel.jpeg" alt="linkedin" width="100px">
                    <div class="mt-3">{{ 'contact.phone' | trans }} </div>
                </div>
                <div class="col">
                    <img class="" src="/images/utils/mail.jpeg" alt="linkedin" width="100px">
                    <div class="mt-3">{{ 'contact.email' | trans }} </div>
                </div>
                <div class="col">
                    <img class="" src="/images/utils/linkedin.jpeg" alt="linkedin" width="100px">
                    <div class="mt-3"><a href="https://www.linkedin.com/in/stephane-ardin-92479a51/" target="_blanc">Linkedin</a></div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="">
                <a class="btn btn-primary" data-toggle="collapse" href="#contactButton" role="button" aria-expanded="false" aria-controls="contactButton">
                    {{ 'contact.forContact' | trans }}
                </a>
            </div>
        </div>
        <div class="collapse" id="contactButton">
            <div class="card card-body">
                {{ form_start(form) }}

                <div class="row">
                    <div class="col">{{ form_row(form.firstname) }}</div>
                    <div class="col">{{ form_row(form.lastname) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(form.phone) }}</div>
                    <div class="col">{{ form_row(form.email) }}</div>
                </div>
                {{ form_rest(form) }}
                <div class="row justify-content-center my-5">
                    <button class="btn btn-primary align-items-end">{{ "contact.form.send" | trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
