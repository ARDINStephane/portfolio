<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content ">
            <div class="modal-header custom-bg-bleue custom-home">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'delete' | trans }}</h5>
                <button type="button" class="close custom-home" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
            </div>
            <div class="modal-body"> {{ 'project.delete' | trans }} :  {{ project.title }} ?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">{{ 'no' | trans }}</button>
                <a href="{{ path("project_delete", {'id' : project.id}) }}"
                   class="btn btn-outline-info">{{ 'yes' | trans }}
                </a>
            </div>
        </div>
    </div>
</div>